<div class="card mb-3 collection d-flex" id="collection_<%= collection.id %>">
  <div class="card-body pb-1">
    <div class="d-flex">
      
      <div class="flex-grow-1 ms-3 text-break">
        <h5 class='card-title'>
          <%= link_to collection, collection_path(collection) %>
        </h5>
      
        <p class="card-subtitle mb-2 text-muted">
          <%= collection.description %>
        </p>
        <p class="card-subtitle mb-2 text-muted">
          <i><small>
            <%= number_with_delimiter collection.projects.count %> projects
          </small></i>
        <p class="card-subtitle mb-2 text-muted"><i><small>
          Last synced: <%= collection.updated_at.strftime("%d %b %Y") %>
        </small></i></p>
      </div>
      <div class="flex-shrink-0">
        <%# todo avatar url %>
        <img src="" class="rounded" height='40' width='40' onerror="this.style.display='none'">
      </div>  
    </div>
  </div>
</div>